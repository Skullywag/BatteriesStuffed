  <ThingDef ParentName="BuildingBaseLarge">
    <defName>LargeSteelBattery</defName>
    <label>large steel battery</label>
    <thingClass>Building_Battery</thingClass>
    <graphicData>
      <texPath>Things/Building/LargeSteelBattery</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>2400</WorkToBuild>
      <Mass>65</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>-18</Beauty>
    </statBases>
    <description>Stores electricity when there is excess power and yields it when there is not. Made of very stable material so does not explode.</description>
    <costList>
      <Steel>155</Steel>
      <Component>3</Component>
    </costList>
    <comps>
      <li Class="CompProperties_Battery">
        <storedEnergyMax>3250</storedEnergyMax>
        <efficiency>0.5</efficiency>
        <startElectricalFires>false</startElectricalFires>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
  </ThingDef>

