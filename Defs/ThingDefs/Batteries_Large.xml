	<ThingDef ParentName="LargeBatteryBase">
		<defName>LargeUraniumBattery</defName>
		<label>large uranium battery</label>
		<description>Stores electricity when there is excess power and yields it when there is not. Made of a non flammable material so doesnt explode.</description>
		<thingClass>BatteriesStuffed.Building_StuffedBattery</thingClass>
		<graphicData>
			<texPath>Things/Building/UraniumBattery</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>675</MaxHitPoints>
			<WorkToBuild>4000</WorkToBuild>
			<Mass>80</Mass>
			<Flammability>0</Flammability>
			<Beauty>-12</Beauty>
		</statBases>
		<costList>
			<Uranium>210</Uranium>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<comps>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Battery">
				<storedEnergyMax>2835</storedEnergyMax>
				<efficiency>0.8</efficiency>
				<shortCircuitInRain>false</shortCircuitInRain>
				<transmitsPower>true</transmitsPower>
			</li>
			<!--<li Class="CompProperties_ExtendedBattery">
				<idlePowerDrainWatts>0</idlePowerDrainWatts>
